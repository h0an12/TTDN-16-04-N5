<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Job Kanban View -->
    <record id="view_mtdn_job_kanban" model="ir.ui.view">
        <field name="name">mtdn.job.kanban</field>
        <field name="model">mtdn.job</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="code"/>
                <field name="name"/>
                <field name="description"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record mtdn_kanban_card mtdn_accent_purple">
                            <div class="mtdn_kanban_title">
                                <div>
                                    <span class="text-muted" t-esc="record.code.value"/>
                                    <div class="fw-bold"><field name="name"/></div>
                                </div>
                            </div>
                            <div class="mt8">
                                <field name="description"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Job List View -->
    <record id="view_mtdn_job_list" model="ir.ui.view">
        <field name="name">mtdn.job.list</field>
        <field name="model">mtdn.job</field>
        <field name="arch" type="xml">
            <list string="Chức danh">
                <field name="code"/>
                <field name="name"/>
                <field name="department_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Job Form View -->
    <record id="view_mtdn_job_form" model="ir.ui.view">
        <field name="name">mtdn.job.form</field>
        <field name="model">mtdn.job</field>
        <field name="arch" type="xml">
            <form string="Chức danh">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="VD: Nhân viên kinh doanh"/>
                        </h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" placeholder="VD: SALE" class="oe_inline"/>
                        </div>
                    </div>
                    <group>
                        <group string="Thông tin">
                            <field name="department_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Mô tả">
                            <field name="description" nolabel="1" placeholder="Mô tả ngắn..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Job Search View -->
    <record id="view_mtdn_job_search" model="ir.ui.view">
        <field name="name">mtdn.job.search</field>
        <field name="model">mtdn.job</field>
        <field name="arch" type="xml">
            <search string="Tìm chức danh">
                <field name="name"/>
                <field name="code"/>
                <field name="department_id"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
                <filter name="group_by_department" string="Nhóm theo phòng ban" context="{'group_by':'department_id'}"/>
            </search>
        </field>
    </record>
</odoo>
