<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Department Kanban View -->
    <record id="view_mtdn_department_kanban" model="ir.ui.view">
        <field name="name">mtdn.department.kanban</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="code"/>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="company_id"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record mtdn_kanban_card mtdn_accent_teal">
                            <div class="mtdn_kanban_title">
                                <div>
                                    <span class="text-muted" t-esc="record.code.value"/>
                                    <div class="fw-bold"><field name="name"/></div>
                                </div>
                                <div>
                                    <t t-if="record.active.raw_value"><span class="badge text-bg-success">Hoạt động</span></t>
                                    <t t-else=""><span class="badge text-bg-secondary">Tạm ẩn</span></t>
                                </div>
                            </div>
                            <div class="mt8"><span class="mtdn_kanban_label">Quản lý:</span> <field name="manager_id"/></div>
                            <div class="mt4"><span class="mtdn_kanban_label">Công ty:</span> <field name="company_id"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <!-- Department List View -->
    <record id="view_mtdn_department_list" model="ir.ui.view">
        <field name="name">mtdn.department.list</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <list string="Phòng ban">
                <field name="code"/>
                <field name="name"/>
                <field name="manager_id"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <!-- Department Form View -->
    <record id="view_mtdn_department_form" model="ir.ui.view">
        <field name="name">mtdn.department.form</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <form string="Phòng ban">
                <sheet>
                    <div class="oe_title">
                        <h1>
                            <field name="name" placeholder="VD: Phòng Nhân sự"/>
                        </h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" placeholder="VD: HR" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group string="Thông tin chung">
                            <field name="manager_id"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                        <group string="Ghi chú">
                            <field name="description" nolabel="1" placeholder="Mô tả ngắn..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Department Search View -->
    <record id="view_mtdn_department_search" model="ir.ui.view">
        <field name="name">mtdn.department.search</field>
        <field name="model">mtdn.department</field>
        <field name="arch" type="xml">
            <search string="Tìm phòng ban">
                <field name="name"/>
                <field name="code"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
                <filter name="group_by_company" string="Nhóm theo công ty" context="{'group_by':'company_id'}"/>
            </search>
        </field>
    </record>
</odoo>
