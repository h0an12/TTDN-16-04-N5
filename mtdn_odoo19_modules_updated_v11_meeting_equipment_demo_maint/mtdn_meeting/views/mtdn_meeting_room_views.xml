<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_room_kanban" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.kanban</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <!-- Default group by status to show a "dashboard-like" kanban with columns -->
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="code"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="state"/>
                <field name="display_state"/>
                <field name="equipment_ids"/>
                <templates>
                    <!-- Odoo 17+ kanban renderer expects a template named "card" -->
                    <t t-name="card">
                        <div t-attf-class="o_kanban_record mtdn_kanban_card mtdn_state_{{ record.display_state.raw_value }}">
                            <div class="o_kanban_record_top">
                                <strong><field name="name"/></strong>
                                <div class="text-muted"><field name="code"/></div>
                            </div>
                            <div class="mt8">
                                <div><span class="fw-bold">Vị trí:</span> <field name="location"/></div>
                                <div><span class="fw-bold">Sức chứa:</span> <field name="capacity"/></div>
                                <div class="mt8">
                                    <t t-set="st" t-value="record.display_state.raw_value"/>
                                    <t t-if="st == 'available'">
                                        <span class="badge text-bg-success">Sẵn sàng</span>
                                    </t>
                                    <t t-elif="st == 'in_use'">
                                        <span class="badge text-bg-warning">Đang sử dụng</span>
                                    </t>
                                    <t t-else="">
                                        <span class="badge text-bg-danger">Bảo trì</span>
                                    </t>
                                </div>
                            </div>
                            <div class="mt8">
                                <span class="fw-bold">Thiết bị:</span>
                                <field name="equipment_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mtdn_meeting_room_list" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.list</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <list string="Phòng họp">
                <field name="code"/>
                <field name="name"/>
                <field name="location"/>
                <field name="capacity"/>
                <field name="display_state" widget="badge"
                       decoration-success="display_state == 'available'"
                       decoration-warning="display_state == 'in_use'"
                       decoration-danger="display_state == 'maintenance'"/>
                <field name="company_id"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mtdn_meeting_room_form" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.form</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <form string="Phòng họp">
                <sheet>
                    <widget name="web_ribbon" title="ĐANG SỬ DỤNG" bg_color="bg-warning" invisible="display_state != 'in_use'"/>
                    <widget name="web_ribbon" title="BẢO TRÌ" bg_color="bg-danger" invisible="display_state != 'maintenance'"/>

                    <div class="oe_button_box" name="button_box">
                        <button type="object" name="action_view_bookings" class="oe_stat_button" icon="fa-calendar">
                            <field name="booking_count" widget="statinfo" string="Lịch đặt"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="VD: Phòng Họp A"/></h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" placeholder="VD: ROOM_A" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group string="Thông tin phòng">
                            <field name="location"/>
                            <field name="capacity"/>
                            <field name="display_state" readonly="1" widget="badge"
                                   decoration-success="display_state == 'available'"
                                   decoration-warning="display_state == 'in_use'"
                                   decoration-danger="display_state == 'maintenance'"/>
                            <field name="state"/>
                            <field name="company_id"/>
                            <field name="active"/>
                        </group>
                    </group>

                    <notebook>
                        <page string="Thiết bị">
                            <field name="equipment_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mtdn_meeting_room_search" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.search</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="arch" type="xml">
            <search string="Tìm phòng họp">
                <field name="name"/>
                <field name="code"/>
                <field name="location"/>
                <filter name="filter_available" string="Sẵn sàng" domain="[('state','=','available')]"/>
                <filter name="filter_maintenance" string="Bảo trì" domain="[('state','=','maintenance')]"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
                <filter name="group_by_state" string="Nhóm theo trạng thái" context="{'group_by':'state'}"/>
            </search>
        </field>
    </record>
</odoo>
