<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_booking_time_wizard_form" model="ir.ui.view">
        <field name="name">mtdn.meeting.booking.time.wizard.form</field>
        <field name="model">mtdn.meeting.booking.time.wizard</field>
        <field name="arch" type="xml">
            <form string="Chọn thời gian đặt phòng">
                <sheet>
                    <group>
                        <group string="Phòng">
                            <field name="room_id" readonly="1"/>
                        </group>
                        <group string="Thời gian" col="2">
                            <field name="start_datetime" required="1"/>
                            <field name="end_datetime" required="1"/>
                        </group>
                    </group>
                    <group string="Thông tin cuộc họp">
                        <field name="title" placeholder="VD: Họp kế hoạch"/>
                        <field name="host_id" required="1"/>
                        <field name="participant_ids" widget="many2many_tags" options="{'no_create': True}"/>
                        <field name="note" placeholder="Ghi chú (tùy chọn)"/>
                    </group>

                    <!-- Keep request_id hidden but stored for confirm action -->
                    <field name="request_id" invisible="1"/>
                </sheet>
                <footer>
                    <button name="action_confirm" type="object" string="Xác nhận &amp; lưu" class="btn-primary"/>
                    <button string="Hủy" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
