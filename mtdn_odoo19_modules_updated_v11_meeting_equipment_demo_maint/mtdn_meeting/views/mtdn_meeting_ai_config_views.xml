<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_ai_config_tree" model="ir.ui.view">
        <field name="name">mtdn.meeting.ai.config.tree</field>
        <field name="model">mtdn.meeting.ai.config</field>
        <field name="arch" type="xml">
            <list string="Cấu hình AI (Gemini)">
                <field name="name"/>
                <field name="active"/>
                <field name="model_name"/>
            </list>
        </field>
    </record>

    <record id="view_mtdn_meeting_ai_config_form" model="ir.ui.view">
        <field name="name">mtdn.meeting.ai.config.form</field>
        <field name="model">mtdn.meeting.ai.config</field>
        <field name="arch" type="xml">
            <form string="Cấu hình AI (Gemini)">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                        <field name="model_name"/>
                        <field name="api_key" widget="password" placeholder="Nhập API key..."/>
                    </group>
                    <group string="Ghi chú">
                        <field name="note" nolabel="1"/>
                    </group>
                    <div class="alert alert-info" style="margin-top:10px;">
                        <b>Gợi ý:</b> API key lấy từ Google AI Studio. Không chia sẻ key công khai.
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mtdn_meeting_ai_config" model="ir.actions.act_window">
        <field name="name">Cấu hình AI (Gemini)</field>
        <field name="res_model">mtdn.meeting.ai.config</field>
        <field name="view_mode">list,form</field>
        <field name="context">{}</field>
    </record>
</odoo>
