<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_room_request_form" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.request.form</field>
        <field name="model">mtdn.meeting.room.request</field>
        <field name="arch" type="xml">
            <form string="Đặt phòng theo yêu cầu">
                <sheet>

                    <notebook>
                        <page string="Thông tin">
                            <group>
                                <group string="Thông tin cuộc họp">
                                    <field name="title" placeholder="VD: Họp kế hoạch"/>
                                    <field name="attendee_count"/>
                                    <field name="location_keyword" placeholder="VD: Tầng 3"/>
                                </group>
                                <group string="Thời gian (có thể bỏ trống)">
                                    <field name="start_datetime" placeholder="Chọn thời gian bắt đầu..."/>
                                    <field name="end_datetime" placeholder="Chọn thời gian kết thúc..."/>
                                    <div class="o_form_label text-muted" style="margin-top:6px;">
                                        * Bạn có thể để trống thời gian để tìm phòng. Khi bấm <b>Đặt lịch</b>, hệ thống sẽ yêu cầu chọn thời gian.
                                    </div>
                                </group>
                            </group>

                            <group string="Thiết bị cần có (tùy chọn)">
                                <field name="required_equipment_type_ids" widget="many2many_checkboxes" options="{'horizontal': true}"/>
                            </group>

                            <group string="Ghi chú">
                                <field name="note" nolabel="1" placeholder="Ghi chú (tùy chọn)"/>
                            </group>
                        
                            <separator string="Kết quả gợi ý" invisible="not line_ids and not alt_line_ids"/>
                            <div class="alert alert-info" invisible="not line_ids" style="margin-bottom:10px;">
                                Danh sách phòng phù hợp đã được tìm thấy. Bạn có thể chọn nhanh ngay bên dưới.
                            </div>
                            <field name="line_ids" nolabel="1" readonly="1" invisible="not line_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="location"/>
                                    <field name="capacity"/>
                                    <field name="equipment_type_summary" string="Thiết bị"/>
                                    <field name="ai_reason" string="Gợi ý"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_select_room" type="object" string="Chọn" class="btn-primary"/>
                                </list>
                            </field>

                            <div class="alert alert-warning" invisible="not alt_line_ids" style="margin-top:10px; margin-bottom:10px;">
                                Không có phòng phù hợp ở khung giờ bạn chọn. Dưới đây là các khung giờ thay thế có phòng trống.
                            </div>
                            <field name="alt_line_ids" nolabel="1" readonly="1" invisible="not alt_line_ids">
                                <list>
                                    <field name="start_datetime"/>
                                    <field name="end_datetime"/>
                                    <field name="reason"/>
                                    <button name="action_apply_alternative" type="object" string="Áp dụng" class="btn-primary"/>
                                </list>
                            </field>

</page>

                        <page string="Phòng gợi ý">
                            <div class="alert alert-info" invisible="not line_ids" style="margin-bottom:10px;">
                                Chọn 1 phòng từ danh sách bên dưới. Nếu bạn chưa chọn thời gian, hệ thống sẽ yêu cầu chọn thời gian khi bấm <b>Đặt lịch</b>.
                            </div>
<field name="line_ids" nolabel="1" readonly="1" invisible="not line_ids">
                                <list>
                                    <field name="code"/>
                                    <field name="name"/>
                                    <field name="location"/>
                                    <field name="capacity"/>
                                    <field name="equipment_type_summary" string="Thiết bị"/>
                                    <field name="ai_reason" string="Gợi ý"/>
                                    <field name="state" widget="badge"/>
                                    <button name="action_select_room" type="object" string="Chọn" class="btn-primary"/>
                                </list>
                            </field>

                            <div class="text-muted" invisible="line_ids" style="margin-top:8px;">
                                Chưa có kết quả. Hãy bấm <b>Tìm phòng phù hợp</b> để hệ thống gợi ý phòng.
                            </div>

                            <group invisible="selected_room_id == False" style="margin-top:10px;">
                                <field name="selected_room_id" readonly="1"/>
                                <div class="alert alert-warning" style="margin-top:4px;">
                                    Đã chọn: <b><field name="selected_room_id"/></b>. Bấm <b>Đặt lịch</b> để lưu lịch đặt phòng.
                                </div>
                            </group>
                        </page>

                        <page string="Lịch thay thế" invisible="not alt_line_ids">
                            <div class="alert alert-warning" style="margin-bottom:10px;">
                                Không còn phòng phù hợp ở khung giờ bạn chọn. Dưới đây là các khung giờ thay thế có phòng trống.
                            </div>
                            <field name="alt_line_ids" nolabel="1" readonly="1">
                                <list>
                                    <field name="start_datetime"/>
                                    <field name="end_datetime"/>
                                    <field name="reason"/>
                                    <button name="action_apply_alternative" type="object" string="Áp dụng" class="btn-primary"/>
                                </list>
                            </field>
                        </page>
                    </notebook>

                </sheet>

                <footer>
                    <button name="action_search_rooms" type="object" string="Tìm phòng phù hợp" class="btn-primary"/>
                    <button name="action_create_booking" type="object" string="Đặt lịch" class="btn-primary" invisible="not selected_room_id"/>
                    <button string="Đóng" special="cancel" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>

    <record id="action_mtdn_meeting_room_request" model="ir.actions.act_window">
        <field name="name">Đặt phòng theo yêu cầu</field>
        <field name="res_model">mtdn.meeting.room.request</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
    </record>
</odoo>
