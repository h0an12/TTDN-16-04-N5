<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <!-- Kanban -->
    <record id="view_mtdn_branch_kanban" model="ir.ui.view">
        <field name="name">mtdn.branch.kanban</field>
        <field name="model">mtdn.branch</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="code"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="quantity_total"/>
                <field name="active"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record mtdn_kanban_card mtdn_accent_blue">
                            <div class="mtdn_kanban_title">
                                <div>
                                    <span class="text-muted" t-esc="record.code.value"/>
                                    <div class="fw-bold"><field name="name"/></div>
                                </div>
                                <div>
                                    <span class="badge text-bg-info">Tài sản: <t t-esc="record.quantity_total.value"/></span>
                                </div>
                            </div>
                            <div class="mt8"><span class="mtdn_kanban_label">Công ty:</span> <field name="company_id"/></div>
                            <div class="mt8">
                                <t t-if="record.active.raw_value">
                                    <span class="badge text-bg-success">Đang hoạt động</span>
                                </t>
                                <t t-else="">
                                    <span class="badge text-bg-secondary">Tạm ẩn</span>
                                </t>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

    <record id="view_mtdn_branch_list" model="ir.ui.view">
        <field name="name">mtdn.branch.list</field>
        <field name="model">mtdn.branch</field>
        <field name="arch" type="xml">
            <list string="Chi nhánh">
                <field name="code"/>
                <field name="name"/>
                <field name="company_id"/>
                <field name="quantity_total"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mtdn_branch_form" model="ir.ui.view">
        <field name="name">mtdn.branch.form</field>
        <field name="model">mtdn.branch</field>
        <field name="arch" type="xml">
            <form string="Chi nhánh">
                <sheet>
                    <div class="oe_title">
                        <h1><field name="name" placeholder="VD: Chi nhánh Hà Nội"/></h1>
                        <div class="text-muted">
                            <span>Mã: </span>
                            <field name="code" class="oe_inline"/>
                        </div>
                    </div>

                    <group>
                        <group>
                            <field name="company_id"/>
                            <field name="partner_id"/>
                            <field name="quantity_total" readonly="1"/>
                            <field name="active"/>
                        </group>
                        <group>
                            <field name="description" nolabel="1" placeholder="Mô tả (tùy chọn)..."/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_mtdn_branch_search" model="ir.ui.view">
        <field name="name">mtdn.branch.search</field>
        <field name="model">mtdn.branch</field>
        <field name="arch" type="xml">
            <search string="Tìm chi nhánh">
                <field name="name"/>
                <field name="code"/>
                <field name="company_id"/>
                <filter name="filter_active" string="Đang hoạt động" domain="[('active','=',True)]"/>
            </search>
        </field>
    </record>
</odoo>
