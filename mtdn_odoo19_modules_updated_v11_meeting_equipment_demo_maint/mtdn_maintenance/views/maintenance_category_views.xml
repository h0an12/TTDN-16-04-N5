<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_maintenance_category_kanban" model="ir.ui.view">
        <field name="name">mtdn.maintenance.category.kanban</field>
        <field name="model">mtdn.maintenance.category</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_small_column">
                <field name="name"/>
                <field name="active"/>
                <field name="description"/>
                <templates>
                    <t t-name="card">
                        <div class="o_kanban_record mtdn_kanban_card mtdn_accent_blue">
                            <div class="mtdn_kanban_title">
                                <div class="fw-bold"><field name="name"/></div>
                                <div>
                                    <t t-if="record.active.raw_value"><span class="badge text-bg-success">Hoạt động</span></t>
                                    <t t-else=""><span class="badge text-bg-secondary">Tạm ẩn</span></t>
                                </div>
                            </div>
                            <div class="mt8"><field name="description"/></div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
    <record id="view_mtdn_maintenance_category_list" model="ir.ui.view">
        <field name="name">mtdn.maintenance.category.list</field>
        <field name="model">mtdn.maintenance.category</field>
        <field name="arch" type="xml">
            <list string="Loại sự cố">
                <field name="name"/>
                <field name="active"/>
            </list>
        </field>
    </record>

    <record id="view_mtdn_maintenance_category_form" model="ir.ui.view">
        <field name="name">mtdn.maintenance.category.form</field>
        <field name="model">mtdn.maintenance.category</field>
        <field name="arch" type="xml">
            <form string="Loại sự cố">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="active"/>
                    </group>
                    <group>
                        <field name="description" placeholder="Mô tả ngắn..."/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_mtdn_maintenance_category" model="ir.actions.act_window">
        <field name="name">Loại sự cố</field>
        <field name="res_model">mtdn.maintenance.category</field>
        <field name="view_mode">kanban,list,form</field>
    </record>
</odoo>
