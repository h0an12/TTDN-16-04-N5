<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_mtdn_meeting_room_form_inherit_maintenance" model="ir.ui.view">
        <field name="name">mtdn.meeting.room.form.inherit.maintenance</field>
        <field name="model">mtdn.meeting.room</field>
        <field name="inherit_id" ref="mtdn_meeting.view_mtdn_meeting_room_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="oe_button_box" name="button_box">
                    <button type="object" name="action_view_maintenance_requests" class="oe_stat_button" icon="fa-wrench">
                        <field name="maintenance_request_count" widget="statinfo" string="Bảo trì"/>
                    </button>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
